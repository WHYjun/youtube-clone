header.header
    .header__column
        a(href=routes.home)
            i.fab.fa-youtube
    .header__column
        form(action=routes.search, method="GET")
            input(type="text", placeholder="Search by terms", name="term")
    .header__column
        ul
            if user.isAuthenticated
                li
                    a(href=`/videos${routes.uploadVideo}`) Upload
                li
                    a(href=routes.userDetail(user.id)) Profile
                li
                    a(href=routes.signout) Sign Out
            else
                li
                    a(href=routes.join) Join
                li
                    a(href=routes.signin) Sign In